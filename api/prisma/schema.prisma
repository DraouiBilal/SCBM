// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id
  email    String    @unique
  phone    String    @unique
  fullname String
  password String
  badgeId  String?   @unique
  status   Status
  history  History[]
  Device   Device    @relation(fields: [deviceId], references: [id])
  deviceId String
}

model History {
  id        String   @id
  user_id   String
  user      User     @relation(fields: [user_id], references: [id])
  device_id String
  device    Device   @relation(fields: [device_id], references: [id])
  timestamp DateTime @default(now())
  action    String
}

model Device {
  id    String @id
  name  String
  users User[]
  history  History[]
}

enum Status {
  ADMIN
  USER
}

enum Action {
  LOGIN_FACE_SUCCESS
  LOGIN_FACE_FAILURE
  LOGIN_BADGE_SUCCESS
  LOGIN_BADGE_FAILURE
}
